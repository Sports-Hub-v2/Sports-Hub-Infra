TZ=Asia/Seoul

# MySQL
MYSQL_ROOT_PASSWORD=changeme
MYSQL_USER=sportshub
MYSQL_PASSWORD=sportshub_pw

# Unified Database (Monolithic Architecture)
# All services now connect to the same database
SPRING_DATASOURCE_URL=jdbc:mysql://mysql:3306/sportshub_db?useSSL=false&allowPublicKeyRetrieval=true&useUnicode=true&characterEncoding=utf8&serverTimezone=Asia/Seoul
SPRING_DATASOURCE_USERNAME=${MYSQL_USER}
SPRING_DATASOURCE_PASSWORD=${MYSQL_PASSWORD}

# Auth Service
AUTH_SUCCESS_REDIRECT_URL=http://localhost:5173/oauth/callback
AUTH_JWT_SECRET=dev-secret-change-me-0123456789-0123456789-0123
AUTH_JWT_EXPIRE_MS=3600000
AUTH_REFRESH_EXPIRE_MS=604800000

# OAuth2 - Google
SPRING_SECURITY_OAUTH2_CLIENT_REGISTRATION_GOOGLE_CLIENT_ID=dummy
SPRING_SECURITY_OAUTH2_CLIENT_REGISTRATION_GOOGLE_CLIENT_SECRET=dummy
SPRING_SECURITY_OAUTH2_CLIENT_REGISTRATION_GOOGLE_SCOPE=email,profile
SPRING_SECURITY_OAUTH2_CLIENT_REGISTRATION_GOOGLE_REDIRECT_URI={baseUrl}/login/oauth2/code/{registrationId}

# OAuth2 - Naver
SPRING_SECURITY_OAUTH2_CLIENT_REGISTRATION_NAVER_CLIENT_ID=dummy
SPRING_SECURITY_OAUTH2_CLIENT_REGISTRATION_NAVER_CLIENT_SECRET=dummy
SPRING_SECURITY_OAUTH2_CLIENT_REGISTRATION_NAVER_SCOPE=name,email
SPRING_SECURITY_OAUTH2_CLIENT_REGISTRATION_NAVER_AUTHORIZATION_GRANT_TYPE=authorization_code
SPRING_SECURITY_OAUTH2_CLIENT_REGISTRATION_NAVER_CLIENT_AUTHENTICATION_METHOD=client_secret_post
SPRING_SECURITY_OAUTH2_CLIENT_REGISTRATION_NAVER_REDIRECT_URI={baseUrl}/login/oauth2/code/{registrationId}
