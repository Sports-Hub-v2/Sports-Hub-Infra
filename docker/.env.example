# MySQL Database Configuration
MYSQL_ROOT_PASSWORD=changeme
MYSQL_USER=sportshub
MYSQL_PASSWORD=sportshub_pw

# Spring DataSource URL (통합 DB)
SPRING_DATASOURCE_URL=jdbc:mysql://mysql:3306/sportshub_db?useSSL=false&allowPublicKeyRetrieval=true&useUnicode=true&characterEncoding=utf8&serverTimezone=Asia/Seoul
SPRING_DATASOURCE_USERNAME=${MYSQL_USER}
SPRING_DATASOURCE_PASSWORD=${MYSQL_PASSWORD}

# JWT Configuration
AUTH_JWT_SECRET=your-super-secret-jwt-key-here-min-256-bits-change-in-production
AUTH_JWT_EXPIRE_MS=900000
AUTH_REFRESH_EXPIRE_MS=604800000

# OAuth Configuration (실제 운영시 교체 필요)
SPRING_SECURITY_OAUTH2_CLIENT_REGISTRATION_GOOGLE_CLIENT_ID=your-google-client-id
SPRING_SECURITY_OAUTH2_CLIENT_REGISTRATION_GOOGLE_CLIENT_SECRET=your-google-client-secret
SPRING_SECURITY_OAUTH2_CLIENT_REGISTRATION_NAVER_CLIENT_ID=your-naver-client-id
SPRING_SECURITY_OAUTH2_CLIENT_REGISTRATION_NAVER_CLIENT_SECRET=your-naver-client-secret

# Success Redirect URL
AUTH_SUCCESS_REDIRECT_URL=http://localhost:5173/oauth/callback
